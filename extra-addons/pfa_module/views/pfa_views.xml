<odoo>
    <!-- Vue arbre -->
    <record id="view_pfa_student_tree" model="ir.ui.view">
        <field name="name">pfa.student.tree</field>
        <field name="model">pfa.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="view_pfa_student_form" model="ir.ui.view">
        <field name="name">pfa.student.form</field>
        <field name="model">pfa.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_pfa_student" model="ir.actions.act_window">
        <field name="name">Ã‰tudiants</field>
        <field name="res_model">pfa.student</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_pfa_root" name="PFA"/>
    <menuitem id="menu_pfa_student" name="Ã‰tudiants"
              parent="menu_pfa_root"
              action="action_pfa_student"/>
</odoo>
